<Page
    x:Class="Files.Views.FuturisticShellPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:Files.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:tuc="using:Microsoft.Toolkit.Uwp.UI.Controls"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    mc:Ignorable="d">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition MinWidth="300" />
            <ColumnDefinition Width="0" />
        </Grid.ColumnDefinitions>

        <Frame x:Name="LeftPane" Grid.Column="0" />

        <Frame x:Name="RightPane" Grid.Column="1" />

        <tuc:GridSplitter
            Grid.Column="1"
            Width="5"
            HorizontalAlignment="Left"
            CursorBehavior="ChangeOnSplitterHover"
            IsTabStop="False"
            ResizeBehavior="BasedOnAlignment"
            ResizeDirection="Auto">
            <tuc:GridSplitter.RenderTransform>
                <TranslateTransform X="0" />
            </tuc:GridSplitter.RenderTransform>
        </tuc:GridSplitter>
    </Grid>
</Page>
